<h2>New book</h2>
  <%= form_with model: book, local: true do |f| %>

  <div>
    Title
	  <% f.label :title %>
	  <%= f.text_field :title %>
  </div>

  <div>
    Opinion
  	<% f.label :body %>
	  <%= f.text_area :body %>
  </div>

  <div>
  	<%= f.submit 'Create Book' %>
  </div>


  <% end %>
</div>
