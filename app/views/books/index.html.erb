<h2>New book</h2>

<%= form_with model:@book, local:true do |f| %>

<div>
	<label for="book_title">Title</label>
	<%= f.text_field :title %>
</div>

<div>
	<label for="book_opinion">Opinion</label>
	<%= f.text_area :body %>
</div>

<%= f.submit 'Create Book' %>

<% end %>

<h2>Books</h2>

<table>
    <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspsn="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
        </tr>
        <% end %>
    </tbody>
</table>