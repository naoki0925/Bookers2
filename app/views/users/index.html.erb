<%= render 'users/list', user: @user %>
<%= render 'books/list', book: @book %>

<div>
	<h2>User</h2>
	<table>
		<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
	  <tr>
	  	<td>
	  		<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
	  	</td>
	  	<td>
	  		<%= @user.name %>
	  	</td>
	  	<td>
	  		<%= link_to "show", "/users/#{user.id}" %>
	  	</td>
	  </tr>
		<% end %>
	</tbody>
	</table>
</div>