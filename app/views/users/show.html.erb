 <% if flash[:notice] %>
   <div class="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'users/list', user: @user %>
    <%= render 'books/list', book: @book %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
          <thead>
              <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspsn="3"></th>
              </tr>
          </thead>
          <tbody
              <% @books.each do |book| %>
              <tr>
                <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
                <td><%= link_to book.title, user_path(book.user) %></td>
                <td><%= book.body %></td>
              </tr>
              <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>