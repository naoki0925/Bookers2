<div class="col-md-3">
  <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <table class="table">
    <tbody>
      <tr></tr>
    <tr>
      <th>name</th>
      <th class="profile-name"><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th class="profile-introduction"><%= user.introduction %></th>
    </tr>
    </tbody>
  </table>
  <div class="row">
    <p class="btn btn-outline-secondary btn-block fas fa-user-cog",href="/users/<% @user.id %>/edit"></p>
  </div>
</div>
